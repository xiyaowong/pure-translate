{
  "name": "pure-translate",
  "displayName": "pure-translate",
  "description": "精简快速的翻译插件，支持悬浮提示和状态栏显示。",
  "version": "0.0.3",
  "publisher": "xiyaowong",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "url": "https://github.com/xiyaowong/pure-translate"
  },
  "main": "./dist/extension.js",
  "icon": "res/logo.png",
  "contributes": {
    "configuration": [
      {
        "title": "Mini Translate",
        "properties": {
          "pure-translate.hover.enable": {
            "type": "boolean",
            "default": false,
            "description": "开启悬浮提示"
          },
          "pure-translate.statusBar.enable": {
            "type": "boolean",
            "default": true,
            "description": "在状态栏中显示"
          },
          "pure-translate.statusBar.showOnHover": {
            "type": "boolean",
            "default": true,
            "description": "在hover时才在状态栏显示，否则随光标移动实时显示。"
          },
          "pure-translate.statusBar.alignment": {
            "type": "string",
            "enum": [
              "left",
              "right"
            ],
            "default": "right",
            "description": "状态栏显示位置",
            "enumDescriptions": [
              "在左边",
              "在右边"
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "release": "bumpp && vsce publish",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/humps": "^2.0.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "bumpp": "^9.2.1",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "fs-extra": "11.1.1",
    "humps": "2.0.1"
  }
}
